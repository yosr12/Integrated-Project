{% extends 'front.html.twig' %}

{% block title %}New Reponse{% endblock %}
{% block style %} active {% endblock %}

{% block yosr %}
    <h1>Reservation</h1>
    <div class="send-message">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="section-heading">
                        <h2>Ajouter votre Reservation</h2>
                    </div>
                </div>
                <div class="col-md-8">
                    <div class="contact-form">
                        {% set id = 1 %}
                        {{ form_start(form,{'attr': {'novalidate': 'novalidate'}} ) }}
                        <div class="row">
                            <div class="col-lg-12 col-md-12 col-sm-12">
                                <fieldset >
                                    <h4>Date debut</h4>
                                    {{ form_widget(form.Datedebut) }}

                                </fieldset>
                            </div>
                            <h4>Date Fin</h4>
                            <div class="col-lg-12 col-md-12 col-sm-12">
                                <fieldset>

                                    {{ form_widget(form.Datefin) }}
                                </fieldset>
                            </div>

                            <h4>Mothede de paiement</h4>
                            <div class="col-lg-12 col-md-12 col-sm-12">
                                <fieldset>
                                    {{ form_widget(form.Methodedepaiement,{'attr': {'class': 'form-control' , 'placeholder' : 'description'}}) }}
                                </fieldset>
                            </div><br><br><br>
                            <div class="col-lg-12">
                                <fieldset>
                                    <button type="submit" id="form-submit" class="filled-button">{{ button_label|default('Ajouter') }}</button>
                                </fieldset>
                            </div>
                        </div>

                        {{ form_end(form) }}

                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>




    <a href="{{ path('reservation_index') }}">Voir vos reponses</a>

{% endblock %}
