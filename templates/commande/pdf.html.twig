<h1>Commande index</h1>

<table class="table" border="4" >
    <thead>
    <tr>
        <th>Id</th>
        <th>Nbproduit</th>
        <th>Date</th>
        <th>Methodedepaiement</th>
        <th>Etat</th>
        <th>Prixtotale</th>
    </tr>
    </thead>
    <tbody>
    {% for commande in commandes %}
        <tr>
            <td>{{ commande.id }}</td>
            <td>{{ commande.Nbproduit }}</td>
            <td>{{ commande.Date ? commande.Date|date('Y-m-d') : '' }}</td>
            <td>{{ commande.Methodedepaiement }}</td>
            <td>{{ commande.Etat }}</td>
            <td>{{ commande.Prixtotale }}</td>
        </tr>
    {% endfor %}
    </tbody>
</table>
