{% extends 'front.html.twig' %}

{% block title %}Commande index{% endblock %}

{% block Amine %}
    <h1>Commande index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nbproduit</th>
                <th>Date</th>
                <th>Methodedepaiement</th>
                <th>Etat</th>
                <th>Prixtotale</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for commande in commandes %}
            <tr>
                <td>{{ commande.id }}</td>
                <td>{{ commande.Nbproduit }}</td>
                <td>{{ commande.Date ? commande.Date|date('Y-m-d') : '' }}</td>
                <td>{{ commande.Methodedepaiement }}</td>
                <td>{{ commande.Etat }}</td>
                <td>{{ commande.Prixtotale }}</td>
                <td>
                    <a href="{{ path('commande_show', {'id': commande.id}) }}">show</a>
                    <a href="{{ path('commande_edit', {'id': commande.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a href="{{ path('pdf')}}">PDF</a>
{% endblock %}
