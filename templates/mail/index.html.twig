{% extends 'base.html.twig' %}

{% block title %}Mail index{% endblock %}

{% block body %}
    <h1>Mail index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Subject</th>
                <th>Destinataire</th>
                <th>Body</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for mail in mails %}
            <tr>
                <td>{{ mail.id }}</td>
                <td>{{ mail.subject }}</td>
                <td>{{ mail.Destinataire }}</td>
                <td>{{ mail.body }}</td>
                <td>
                    <a href="{{ path('mail_show', {'id': mail.id}) }}">show</a>
                    <a href="{{ path('mail_edit', {'id': mail.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('mail_new') }}">Create new</a>
{% endblock %}
