{% extends 'base2.html.twig' %}
 {% set id = 1 %}
{% block body %}
    <section id="main-content">
        <section class="wrapper site-min-height">
            <!-- page start-->
            <div class="chat-room mt">
                <aside class="mid-side">
                    <div class="chat-room-head">
                        <h3>Chat Room: Support</h3>
                        <form action="#" class="pull-right position">
                            <input type="text" placeholder="Search" class="form-control search-btn ">
                        </form>
                    </div>
                    <a href="{{ path('sujet_index') }}"><button type="button" class="btn btn-info pull-right">List des Sujets</button></a>
                    <div class="room-box">
                        <h5 class="text-primary"><a href="{{ path('sujet_show2', {'id': sujet.id , 'idadmin': id} ) }}">{{ sujet.sujet }}</a></h5>
                        <p>{{ sujet.description }}</p>
                        <p><span class="text-muted">Admin :</span> {{ sujet.utilisateur.prenom }} | <span class="text-muted">Tags :</span> {% for tag in sujet.getTag %}{{ tag.tag }},{% endfor %} | <span class="text-muted">Last Activity :</span> 2 min ago <i class="fa fa-comments" aria-hidden="true"> {{ sujet.commentaires|length }}</i>
                            <span class="pull-right">
                            <a class="btn btn-danger" href="{{ path('sujet_delete', {'id': sujet.id}) }}"> delete</a>
                            </span>
                        </p>
                    </div>

                    <div style="margin-bottom: 700px;">
                    {% for commentaires in sujet.getCommentaires %}
                        {% set nb1 = 0 %}
                        {% set nb2 = 0 %}
                                <div class="group-rom ">
                                    <div class="first-part odd">
                                        {{ commentaires.utilisateur.prenom }} {{ commentaires.utilisateur.nom }}
                                        <img src="{{ asset('/uploads/'~commentaires.utilisateur.image ) }}" height="50px" width="50px" style="border-radius: 50%;">
                                        <div class="btn-group ">
                                            {% set today = "now"|date('Y-m-d H:i:s' ) %}
                                            {% set difference = date(today).diff(date(commentaires.utilisateur.ban)) %}
                                            {% if difference.invert == 1 %}
                                                <button type="button" class="btn btn-warning dropdown-toggle" data-toggle="dropdown" aria-expanded="fa">
                                                    Ban User For
                                                    <span class="caret"></span>
                                                </button>
                                                <ul class="dropdown-menu">
                                                    <li><a href="{{ path('banuser', {'userid': commentaires.utilisateur.id , 'banlong': 60 , 'idsujet':sujet.id }) }}">60 sec</a></li>
                                                    <li><a href="{{ path('banuser', {'userid': commentaires.utilisateur.id , 'banlong': 1800 , 'idsujet':sujet.id }) }}">30 min</a></li>
                                                    <li><a href="{{ path('banuser', {'userid': commentaires.utilisateur.id , 'banlong': 3600 , 'idsujet':sujet.id }) }}">60 min</a></li>
                                                    <li><a href="{{ path('banuser', {'userid': commentaires.utilisateur.id , 'banlong': 43200 , 'idsujet':sujet.id }) }}">12 hours</a></li>
                                                    <li><a href="{{ path('banuser', {'userid': commentaires.utilisateur.id , 'banlong': 86400 , 'idsujet':sujet.id }) }}">1 day</a></li>
                                                    <li><a href="{{ path('banuser', {'userid': commentaires.utilisateur.id , 'banlong': 604800 , 'idsujet':sujet.id }) }}">1 week</a></li>

                                                </ul>
                                            {% else %}
                                                <button type="button" class="btn btn-success dropdown-toggle" >
                                                    <a style="color:white;" href="{{ path('unbanuser', {'userid': commentaires.utilisateur.id , 'banlong': 60 , 'idsujet':sujet.id }) }}">Unban user</a> </button>
                                            {% endif %}
                                            </div>
                                    </div>
                                    {% if commentaires.filtredcomment is not null %}
                                        <div class="second-part alert alert-danger">
                                    {% else %}
                                        <div class="second-part">
                                    {% endif %}
                                        {{ commentaires.commentaire  }}</div>
                                        <i class="fa fa-thumbs-down">{% for reactions in commentaires.reactions %} {% if reactions.reaction==0 %} {% set nb1=nb1+1 %} {% endif %} {% endfor %} {{  nb1 }} </i>
                                        <i class="fa fa-thumbs-up">{% for reactions in commentaires.reactions %} {% if reactions.reaction==1 %} {% set nb2=nb2+1 %} {% endif %}  {% endfor %} {{  nb2 }}</i>
                                        <div class="third-part pull-right">
                                            <a class="btn btn-danger" style="margin: 2px" href="{{ path('commentaire_deleteback', {'id': commentaires.id,'idsujet':sujet.id}) }}"> delete</a>
                                        </div>
                                </div>
                    {% endfor %}
                    </div>
                    <footer class="pull-right">
                        <div class="chat-txt">
                            {{ form_start(form,{'attr': {'novalidate': 'novalidate'}}) }}


                                <img src="{{ asset('/uploads/support.png' ) }}" style="border-radius: 50%;" height="70px" width="70px">

                                <div class="col-lg-8 col-md-12 col-sm-12">
                                    <fieldset>
                                        {{ form_errors(form.commentaire) }}
                                        {{ form_widget(form.commentaire,{'attr': {'class': 'form-control' , 'placeholder' : 'Repondre Ã  ce sujet'}}) }}
                                    </fieldset>
                                </div>

                                <div class="col-lg-8">
                                    <fieldset>
                                        <button type="submit" id="form-submit" class="btn btn-primary pull-right">{{ button_label|default('Repondre') }}</button>
                                    </fieldset>
                                </div>

                            </div>
                            {{ form_end(form) }}
                        <div class="btn-group hidden-sm hidden-xs">
                            <button type="button" class="btn btn-white"><i class="fa fa-meh-o"></i></button>
                            <button type="button" class="btn btn-white"><i class=" fa fa-paperclip"></i></button>
                        </div>
                        <button class="btn btn-theme">Send</button>
                    </footer>
                </aside>
            </div>
            <!-- page end-->
        </section>
        <!-- /wrapper -->
    </section>
{% endblock %}
