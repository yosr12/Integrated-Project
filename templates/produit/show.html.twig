{% extends "Front.html.twig" %}


{% block title %}Produit{% endblock %}

{% block Amine %}
    <h1>Produit</h1>

    <table >
        <tbody>

            <tr>
                <th>Nom</th>
                <td>{{ produit.Nom }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ produit.Prix }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td><img src="{{ asset('uploads/'~produit.Image) }}" WIDTH=150 HEIGHT=120 alt=""></td>
            </tr>
            <tr>
                <th>Quantité</th>
                <td>{{ produit.Quantite }}</td>
            </tr>
            <tr>
                <th>Avis</th>
                <td>{{ produit.avis }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('produit_index') }}">back to list</a>

    <a href="{{ path('produit_edit', {'id': produit.id}) }}">edit</a>

    {{ include('produit/_delete_form.html.twig') }}
{% endblock %}
