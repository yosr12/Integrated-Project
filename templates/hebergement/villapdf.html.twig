<div class="latest-products">
      <div class="container">
        <div class="row">
          
          {% for villa in villas %}
          <div class="col-md-4">
            <div class="product-item">
              <div class="down-content">
                <a href="{{ path('hoteldetails', {'id': villa.id}) }}"><h2>{{villa.nom}}</h2></a>
                <h5>Adresse :{{villa.adresse}}</h5>

                <h4>Price :{{villa.price}}</h4>
                <h5>Description :{{villa.description}}</h5>


                <small>
                     <strong title="Available"><i class="fa fa-calendar"></i>Starts from {{villa.datedebut|date("m/d/y")}}</strong> &nbsp;&nbsp;&nbsp;&nbsp;
                     <strong title="Available"><i class="fa fa-calendar"></i>Ends {{villa.datefin|date("m/d/y")}}</strong> &nbsp;&nbsp;&nbsp;&nbsp;
                </small><br>
              </div>
            </div>
          </div>
          {% endfor %}

          
          
        </div>
    </div>
</div>
