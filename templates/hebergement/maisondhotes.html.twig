{% extends 'base.html.twig' %}
{%block body%}
<!-- Page Content -->
    <div class="page-heading about-heading header-text" style="background-image: url({{asset('assets/images/maisondhote.jpg') }});;">
      <div class="container">
        <div class="row">
          <div class="col-md-12">
            <div class="text-content">
              <h4></h4>
              <h2>Les plus belle maisons d'h√¥te</h2>
            </div>
          </div>
        </div>
      </div>
