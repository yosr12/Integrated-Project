{% extends "Front.html.twig" %}
{% block lien %}  <li class="nav-item"> <a class="nav-link" href=""  data-toggle="modal" data-target="#exampleModalCenter"> Panier <i class="fa fa-shopping-cart">  </i></a></li> {% endblock %}
{% block Amine %}
    <div class="bg-light p-3">
        <h1>Votre panier</h1>
    </div>

    {% if items | length > 0 %}
    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Title</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Total</th>
        </tr>
        </thead>
        <tbody>
        {% for item in items %}
            <tr>
                <td>{{ item.produit.id }}</td>
                <td>{{ item.produit.nom }}</td>
                <td>{{ item.produit.prix }}</td>
                <td>{{ item.quantity }}</td>
                <td>{{ item.produit.prix * item.quantity }}</td>
                <td>
                    <a href="{{ path('cart_remove', {'id': item.produit.id}) }}" class="btn btn-sm btn-danger">
                        <i class="fa fa-trash"></i>
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
        <tfoot>
        <tr>
            <th colspan="4" class="text-right">
                Total :
            </th>
            <th>{{ total }}</th>
            <th></th>
        </tr>
        </tfoot>
    </table>

    <!-- Button trigger modal -->


    <!-- Modal -->
    <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">Modal title</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary">Save changes</button>
                </div>
            </div>
        </div>
    </div>
    {% else %}
        <p>Panier vide</p>
    {% endif %}

{% endblock %}
