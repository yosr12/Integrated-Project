{% extends 'base.html.twig' %}

{% block title %}Question index{% endblock %}

{% block body %}
    <h1>Question index</h1>
    <div class="d-flex align-items-center"><input class="form-control" type="search" id="search" placeholder="Search by Nom">
        <a href="{{ path('searchrdv') }}"></a>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Question</th>
                <th>Image</th>
                <th>Type</th>
                <th>actions</th>
                <th>statisque</th>
            </tr>
        <tbody id="all">
        {% include 'question/recherche.html.twig' %}
        </tbody>
        <tbody align="left" border="2" id="search">
        </tbody>
    </table>



    <div id="div_chart"></div>
    <div id="div_histogram"></div>

    {% if piechart is defined %}
        <script type="text/javascript" src="{{ asset('https://www.gstatic.com/charts/loader.js') }}"></script>
        <script type="text/javascript">
            {% if type == 'yes/no' %}
                {{ gc_draw(piechart, 'div_chart') }}
            {% else %}
            {{ gc_draw(piechart, 'div_chart') }}
            {% endif %}

        </script>
    {% endif %}

    <a class="btn btn-round btn-info" href="{{ path('question_new') }}"> new</a>
    <a class="btn btn-round btn-warning" href="{{ path('pdf') }}">pdf</a>
    <script src="{{ asset('https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js') }}"></script>
    <script>
        $( document ).ready(function() {
            var currentRequest = null;
            $("#search").keyup(function(e){

                var value = $(this).val();
                if(currentRequest != null) {
                    currentRequest.abort();
                }

                currentRequest = $.ajax({

                    url : "{{ path('searchrdv') }}",
                    type : 'GET',
                    data: {
                        'searchValue' : value
                    },

                    success : function(retour)
                    {
                        $('#all').html(retour);

                    },
                });
                return false;
            });
        });
    </script>
{% endblock %}
